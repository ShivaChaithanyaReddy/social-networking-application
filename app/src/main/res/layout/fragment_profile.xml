<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.first.homework09.ProfileFragment">

    <LinearLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:src="@drawable/unclogo"
            android:id="@+id/circleView"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp" />

    </LinearLayout>

    <Button
        android:id="@+id/create_trip_btn_From_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_header"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="41dp"
        android:text="Create Trip" />

    <Button
        android:id="@+id/my_trip_btn_From_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/create_trip_btn_From_profile"
        android:layout_below="@+id/profile_header"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="41dp"
        android:text="My Trips" />


    <Button
        android:id="@+id/frnd_trip_btn_From_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/my_trip_btn_From_profile"
        android:layout_below="@+id/profile_header"
        android:layout_marginTop="41dp"
        android:text="Friend's Trip" />


    <Button
        android:id="@+id/Joined_trip_btn_From_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frnd_trip_btn_From_profile"
        android:layout_marginTop="41dp"
        android:text="Joined Trips" />



</RelativeLayout>
