<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/recycler_each_item_layout"
    android:background="@drawable/border_for_recview">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Complete_layout1">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/frnd_pic_from_req"
            android:paddingTop="10dp"
            android:layout_weight="0.09" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:text="TextViewmama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frnd_id_from_req"
                android:layout_marginTop="@dimen/_15sdp"
                />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="approve"
            android:id="@+id/approve_request_from_req"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="disapprove"
            android:id="@+id/disapprove_request_from_req"/>
    </LinearLayout>

</FrameLayout>
